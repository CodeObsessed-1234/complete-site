  <style>
    * {
      margin: 0;
      padding: 0;
    }

    html {
      scroll-behavior: smooth;
    }

    body {
      scroll-behavior: smooth;
      overflow: auto;
    }

    .main {
      width: 100vw;
      height: fit-content;
      position: absolute;
      top: 0%;
      display: flex;
      flex-wrap: wrap;
      flex-direction: column;
      z-index: 4;
      /* position: static;
  background-image: url("https://media.tenor.com/PmVJW13IiEEAAAAd/construction-boss.gif");
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover; */
    }

    #img {
      position: fixed;
      min-width: 100vw;
      min-height: 100vh;
      z-index: 3;
    }

    #logo {
      width: 80px;
      padding-right: 20px;
      height: auto;
    }

    body {
      font-family: 'Kanit', sans-serif;
    }

    .head a {
      text-decoration: none;
      color: aliceblue;
    }

    .head {
      display: flex;
      z-index: 5;
      position: fixed;
      min-width: 100vw;
      height: fit-content;
      flex-wrap: wrap;
      justify-content: space-around;
      color: aliceblue;
      border-bottom: 2px solid white;
      align-items: center;
      background-color: rgb(30, 27, 27);
    }

    .companyName {
      display: flex;
      font-size: 10px;
      background-color: rgb(200, 194, 17);
      color: black;
    }

    .headingContent {
      display: flex;
      font-size: 12px;
      flex-wrap: wrap;
      justify-content: center;
      align-items: center;
    }

    .headingContent h2:hover {

      box-shadow: 10px 10px 60px 10px rgb(255, 255, 255);
    }

    .headingContent h2 {
      padding: 0px 10px;
    }

    .link {
      cursor: pointer;
    }

    .makeScroll {
      text-align: center;
      width: 100vw;
      height: 60vh;
      word-spacing: 10px;
      font-size: 30px;
      color: rgba(39, 38, 38, 0.856);
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      align-items: center;
    }

    .makeScroll h1 {

      padding: 0px 30px;
    }

    .intro {

      display: flex;
      flex-direction: column;
      flex-wrap: wrap;
      align-items: center;
      min-height: 100vh;
      justify-content: center;
      min-width: 100vw;
      /* margin-bottom: 15vh; */
    }

    .intro h1 {
      width: inherit;

    }

    .intro span {
      font-size: 25px;
      margin-left: 20px;
      margin-top: 50px;
      cursor: pointer;
      background-color: rgb(60, 22, 95);
      padding: 10px 20px;
      color: aliceblue;
      border-radius: 20px;
      border: 2px solid white;
    }

    .intro span:hover {
      transform: scale(1.1, 1.1);
      box-shadow: 10px 10px 80px 10px rgb(255, 255, 255);
    }

    .services {
      display: flex;
      flex-direction: column;
      min-width: 100vw;
      justify-content: center;
      flex-wrap: wrap;
      min-height: 100vh;
      align-items: center;
      background-color: aliceblue;

    }

    .services h1 {
      padding-top: 20px;
    }

    #serviesHeading {
      border-bottom: 10px solid rgb(255, 238, 0);
      margin-bottom: 20px;

    }

    .typesOfServies {
      max-width: fit-content;
      cursor: pointer;
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      align-items: center;


    }

    .serviceImage {
      width: 300px;
    }

    .service {
      max-width: 300px;
      background-color: gainsboro;
      margin-left: 30px;
      padding: 20px 30px;
      margin-top: 20px;

    }

    .service:hover {
      transform: scale(1.1, 1.1);
      box-shadow: 10px 10px 80px 10px rgb(77, 77, 77);
    }

    .about {
      background-color: rgb(30, 27, 27);
      display: flex;
      min-width: 100vw;
      /* flex-wrap: wrap; */
      justify-content: space-around;
      min-height: 100vh;
    }


    .content {
      display: flex;
      color: aliceblue;
      flex-direction: column;
      min-width: fit-content;
      justify-content: center;
      align-items: center;
      flex-wrap: wrap;
      /* background-color: antiquewhite;   */
    }

    .content h1 {
      padding: 20px 0px;
      width: fit-content;

      border-bottom: 10px solid rgb(255, 238, 0);
    }

    .content p {
      display: flex;
      justify-content: center;
      align-items: center;
      font-size: larger;
      width: fit-content;
      flex-wrap: wrap;
      padding: 20px 80px;
      text-align: center;
    }



    @keyframes down {
      0% {
        transform: scale(1.1, 0.2);
      }
    }

    #downArrow:hover {
      cursor: pointer;
    }

    #top {
      bottom: 2%;
      position: fixed;
      right: 1%;
      font-size: 25px;
      font-weight: bolder;
      background-color: rgba(249, 249, 249, 0.426);
      border-radius: 20px;
      padding: 10px 20px;
      color: rgb(22, 16, 16);
    }

    .achievements {
