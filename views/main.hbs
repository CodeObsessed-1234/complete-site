      padding: 10px 20px;
      display: flex;
      margin-right: 20px;
      border-radius: 20px;
      border-right: 6px solid rgb(255, 255, 255);
      flex-direction: column;
      align-items: center;
      margin-bottom: 20px;
      justify-items: center;
    }

    .achievement h1 {
      font-size: 70px;
    }

    .achievement p {
      font-size: 30px;
    }

    .achievement:hover {
      border-bottom: 5px solid white;

    }

    .projects {
      padding-top: 50px;
      min-width: 100vw;
      min-height: 100vh;
      text-align: center;
      background-color: aliceblue;
    }

    .projectHeading {
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .projectHeading h1 {
      padding-top: 40px;
      padding-bottom: 10px;
      margin-bottom: 40px;
      border-bottom: 8px solid yellow;
    }

    .projectImage {
      width: 500px;
      border-radius: 20px;
      box-shadow: 0px 0px 80px 0px black;
      height: 500px;
      margin-top: 20px;
      margin-right: 20px;
    }

    .projectsImage {
      align-items: center;
      justify-content: center;
      display: flex;
      flex-wrap: wrap;
    }

    .projImage {
      margin-top: 20px;
      margin-right: 20px;
    }

    .projectImage:hover {
      opacity: 0.5;
      transform: rotate3d(5, 5, 5, 7deg)
    }

    .contact {
      color: aliceblue;
      display: flex;
      flex-direction: column;
      padding: 30px 0px;
      flex-wrap: wrap;
      align-items: center;
      min-width: 100vw;
      min-height: 100vh;
      background-color: rgb(22, 25, 25);
    }

    .contactHeading h1 {
      padding-top: 50px;

      border-bottom: 7px solid yellow;
      font-size: 40px;
    }

    .contactDetails {
      display: flex;
      flex-wrap: wrap;
      margin-top: 50px;
      justify-content: center;
      /* align-items: center; */
    }

    .inquiries h1 {

      border-bottom: 6px solid white;
      margin-bottom: 20px;
    }

    .headOffice h1 {

      border-bottom: 6px solid white;
      margin-bottom: 20px;
    }

    .contactUs h1 {

