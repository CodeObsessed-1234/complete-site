    .employment {
      display: flex;
      flex-direction: column;
      justify-content: center;
      width: 40%;
      align-items: center;
      align-items: center;
      margin-top: 10px;
    }

    .contactDetails {
      display: flex;
    }

    .contact p {
      font-size: 25px;
    }

    .details {

      border-radius: 10px;
      width: 500px;
      height: 50px;
      margin: 20px 0px;
    }

    #submit {
      padding: 5px 20px;
      border-radius: 20px;
      font-size: 20px;
      color: aliceblue;
      float: right;
      cursor: pointer;
      margin-top: 20px;
      border: 2px solid white;
      background-color: rgb(75, 89, 84);
    }

    @media only screen and (max-width:646px) {
      .makeScroll h1 {
        border-left-width: 0px;
        border-right-width: 0px;
      }

      .makeScroll h1 {
        font-size: larger;
        min-width: 100vw;
      }

    }

    @media only screen and (max-width:351px) {
      .makeScroll {
        padding-top: 40px;
      }
    }

    @media only screen and(max-width:434px) {
      .projImage {
        width: 100px;
        height: auto;
      }
    }
  </style>




</head>

