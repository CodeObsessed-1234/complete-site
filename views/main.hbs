    .employment h1 {

      border-bottom: 6px solid white;
      margin-bottom: 20px;
    }

    .inquiries {
      display: flex;
      flex-direction: column;
      /* justify-content: center; */
      align-items: center;
      margin-right: 30px;
      width: 40%;
      margin-top: 10px;

    }

    .headOffice {

      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      width: 40%;
      margin-top: 10px;
      margin-right: 50px;
    }

    .contactUs {
